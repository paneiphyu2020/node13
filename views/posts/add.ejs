<body>

    <!-- Left Panel -->
    <% include ../partial/left-panel %>
    <!-- /#left-panel -->

    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <% include ../partial/header %>
         <!-- /header -->
         <!-- Header-->

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li class="active">Dashboard</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="content mt-3">
            <div class="row">
              <div class="col-lg-2"></div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">Post Add</div>
                        <div class="card-body card-block">
                            <form action="/posts/add" method="post">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">Username</div>
                                        <input type="text" name="title" id="title" placeholder="Title" class="form-control">
                                        <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">Email</div>
                                        <input type="text" name="content" id="content" placeholder="Content" class="form-control">
                                        <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">Password</div>
                                        <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
                                        <select name="author" id="author" class="form-control">
                                            <% for(var i =0; i < users.length; i++){%>
                                            <option value="<%= users[i]._id %>"><%= users[i].name %></option>
                                          <%}%>
                                          </select>
                                    </div>
                                </div>
                                <div class="form-actions form-group">
                                    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
                                    
        </div> <!-- .content -->
    </div><!-- /#right-panel -->

    <!-- Right Panel -->

    <% include ../partial/script %>
</body>
<script src="/javascripts/jquery-3.5.1.min.js"></script>
<script src="/javascripts/jquery.validate.min.js"></script>
<script>
    $('#myForm').validate({
     rules:{
         name : {
             required : true,
             minlength :5
         },
         email : {
             required : true,
             emailExt : true,
         },
         password : {
             required : true,
             pwcheck : true,
             minlength : 8,
         }
        },
     messages : {
             name : {
             required : "Name field need to insert",
             },

             email : {
                 required : "Email field to insert",
             },
             
             password : {
                 required : "Password field need to insert",
                 pwcheck : "Please enter 1 uppercase,  1 lowercase and 1 digit",
             }
         
         },
    });

    $.validator.addMethod("pwcheck", function (value) {
      return (
        /^[A-Za-z0-9\d=!\-@._*]*$/.test(value) && // consists of only these
        /[a-z]/.test(value) && // has a lowercase letter
        /\d/.test(value)
      ); // has a digit
    });
    jQuery.validator.addMethod(
      "emailExt",
      function (value, element, param) {
        return value.match(
          /^[a-zA-Z0-9_\.%\+\-]+@[a-zA-Z0-9\.\-]+\.[a-zA-Z]{2,}$/
        );
      },
      "Your E-mail is wrong"
    );

    $("#email").blur(function(){
        var datae = {email:$('#email').val()};
        if(datae.email != null){
            $.ajax({url:"/users/emaildu", data:datae, type:"POST",
        success:function(result){
            if(result.status){
                alert("email is duplicate");
                $("#email").val("");
                $("#email").focus;
            

            }
        },
       });
    }
    });
</script>
</html>




